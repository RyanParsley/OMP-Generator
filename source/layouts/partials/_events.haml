%h2{:style => "border: 2px solid #010101; background-color: #912; color: #dddddd !important; padding: 10px; font-family: Arial, Helvetica, sans-serif;"}
  %a{:name => "events"}
  %span{:style => "font-family: 'Times New Roman', serif !important; line-height: 14px !important; font-size: 30px !important; color: #ddd !important; font-weight: bold !important;"} ::
  Upcoming events
%table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "10", :width => "90%"}
  %tbody
    %tr{:valign => "top"}
      - current_page.data.events.each_slice((current_page.data.events.length / 2.0 ).round) do |col|
        %td{:align => "left", :style => "text-align: left; font-size: 12px; font-family: Arial, Helvetica, sans-serif; color: #333; width: 50%;", :width => "50%"}
          - col.each do |item|
            %span{:style => "color: #912; font-weight: bold;"} 
              = item.Date
            %br/
            %span{:style => "font-weight: bold;"}
              = item.Title
            %br/
            %span{:style => "color: #912;"} 
              = item.Time
            = item.Location
            %br/
            %br/
